#!/bin/bash

SNAP_RPC="https://govgen-rpc.equinoxdao.xyz"

BLOCK_HEIGHT=0; \
TRUST_HASH=""

sed -i.bak -E "s|^(enable[[:space:]]+=[[:space:]]+).*$|\1true| ; \
